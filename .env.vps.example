# Copy to .env.vps and fill with your production secrets before running docker-compose.

# Database credentials for the Postgres container (used by DATABASE_URL below).
POSTGRES_USER=planner
POSTGRES_PASSWORD=planner
POSTGRES_DB=personal-planner

# App URLs (replace with your domain).
APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Google Calendar OAuth (optional, required for calendar sync).
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
# Legacy fallbacks still supported:
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# NextAuth secret (create a 32+ char random string).
NEXTAUTH_SECRET=change-me

# Optional: push notifications and telemetry.
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
NEXT_PUBLIC_POSTHOG_KEY=

# Email provider (optional).
EMAIL_SERVER=
EMAIL_FROM=no-reply@personal-planner.local
